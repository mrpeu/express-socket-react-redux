{
  "name": "express-socket",
  "version": "1.0.0",
  "description": "",
  "main": "server/main.js",
  "scripts": {
    "dev-server": "nodemon --watch server --exec babel-node server/main.js",
    "dev-client": "webpack --watch client --config client/webpack.config.js",
    "OLD_webpack-server": "webpack --config ./server/webpack.config.js",
    "OLD_client": "webpack --watch",
    "OLD_server": "babel server/*.js -d build/ && node build/server/main.js",
    "OLD_server-watch": "babel-node server/main.js --presets es2015,stage-2 --watch",
    "OLD_build-babel": "babel client/*.js -d build/ --sourceMaps=true && babel server/*.js -d build/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ansi-styles": "^2.2.0",
    "chalk": "^1.1.1",
    "express": "^4.13.4",
    "react": "^0.14.1",
    "react-dom": "^0.14.7",
    "react-redux": "^4.0.0",
    "redux": "^3.3.1",
    "socket.io": "^1.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-amd": "^6.6.5",
    "babel-plugin-transform-react-constant-elements": "^6.0.14",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-2": "^6.5.0",
    "babel-watch": "^1.0.2",
    "json-loader": "^0.5.4",
    "react-hot-loader": "^1.3.0"
  },
  "eslintConfig": {
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        }
    },
    "rules": {
      "no-console": 0,
      "arrow-body-style": [2, "as-needed"],
      "comma-dangle": [1, "only-multiline"],
      "no-shadow": [2, { "allow": ["state"] }],
      "new-cap": 0,
      "curly": [2, "multi", "consistent"],
      "no-param-reassign": 0
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "airbnb"
  }
}
